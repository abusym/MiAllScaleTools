<Window x:Class="MiAllScaleTools.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="设置" Height="420" Width="720" MinHeight="360" MinWidth="680"
        WindowStartupLocation="CenterOwner"
        FontSize="14"
        FontFamily="Microsoft YaHei UI"
        Background="{DynamicResource AppBackgroundBrush}"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Scrollable content (fixes "bottom controls not fully visible") -->
        <ScrollViewer Grid.Row="0"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <Border Style="{StaticResource CardBorderStyle}" Padding="12" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock FontSize="16" FontWeight="SemiBold" Text="设置"/>
                        <TextBlock Margin="0,6,0,0" Foreground="{DynamicResource TextSecondaryBrush}"
                                   Text="这里用于配置程序运行所需信息，非专业用户请勿随意修改。"/>
                    </StackPanel>
                </Border>

                <GroupBox Header="电子秤 SQLite" Padding="10" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="SQLite 数据库文件路径"/>
                        <DockPanel Margin="0,6,0,0" LastChildFill="True">
                            <Button DockPanel.Dock="Right"
                                    Margin="10,0,0,0"
                                    Width="96" Height="34"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Click="BtnBrowseDb_Click"
                                    Content="浏览..."/>
                            <TextBox x:Name="TbScaleDbPath" MinWidth="380" Height="34"/>
                        </DockPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="MiAll（SQL Server）" Padding="10" Margin="0,0,0,6">
                    <StackPanel>
                        <TextBlock Text="连接字符串"/>
                        <TextBox x:Name="TbSqlConn" Margin="0,6,0,10" Height="34"/>

                        <TextBlock Text="电子秤商品类目名称"/>
                        <TextBox x:Name="TbGoodsTypeName" Margin="0,6,0,0" Height="34"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Fixed bottom actions -->
        <Border Grid.Row="1" Padding="0,10,0,0">
            <DockPanel LastChildFill="False">
                <TextBlock x:Name="TbHint" DockPanel.Dock="Left" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <Button Width="110" Height="38" Margin="0,0,10,0"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Click="BtnCancel_Click" Content="取消"/>
                    <Button Width="130" Height="38"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Click="BtnSave_Click" Content="保存"/>
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
</Window>


